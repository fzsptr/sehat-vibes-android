<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0F1115">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginTextView"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#EAEAEA"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"/>

        <EditText
            android:id="@+id/etUsrnmLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/usernameEditText"
            android:background="@drawable/edit_text_background"
            android:textColor="#EAEAEA"
            android:textColorHint="#8B929E"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etPwLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwordEditText"
            android:background="@drawable/edit_text_background"
            android:inputType="textPassword"
            android:textColor="#EAEAEA"
            android:textColorHint="#8B929E"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginButton"
            android:textColor="#0F1115"
            android:backgroundTint="#00BCD4"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:elevation="3dp"/>

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belumPunyaAkun"
            android:textColor="#4FC3F7"
            android:layout_marginTop="8dp"/>

    </LinearLayout>


</ScrollView>